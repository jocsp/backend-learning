generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Student {
    id               Int          @id @default(autoincrement())
    name             String
    email            String       @unique
    registrationDate DateTime     @default(now())
    major            String
    enrollments      Enrollment[]

    @@map("students")
}

model Professor {
    id           Int        @id @default(autoincrement())
    name         String
    email        String     @unique
    department   Department @relation(fields: [departmentId], references: [id])
    departmentId Int
    hireDate     DateTime   @default(now())
    courses      Course[]

    @@map("professors")
}

model Course {
    id           Int          @id @default(autoincrement())
    courseCode   String
    mode         Mode
    name         String
    credits      Int
    semester     Semester
    year         Int
    professor    Professor    @relation(fields: [professorId], references: [id])
    professorId  Int
    department   Department   @relation(fields: [departmentId], references: [id])
    departmentId Int
    enrollments  Enrollment[]

    @@map("courses")
}

model Enrollment {
    courseId       Int
    studentId      Int
    course         Course   @relation(fields: [courseId], references: [id])
    student        Student  @relation(fields: [studentId], references: [id])
    enrollmentDate DateTime @default(now())
    grade          String?

    @@id([courseId, studentId])
    @@map("enrollments")
}

model Department {
    id               Int         @id @default(autoincrement())
    name             String
    buildingLocation String
    courses          Course[]
    professors       Professor[]

    @@map("departments")
}

enum Mode {
    VIRTUAL
    PRESENTIAL
    BLENDED
    ONLINE
}

enum Semester {
    FALL
    SPRING
    SUMMER
}
